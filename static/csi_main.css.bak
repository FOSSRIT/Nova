@charset "UTF-8";
body {
    font: 100% Verdana, Arial, Helvetica, sans-serif;
    background: #FFF;
    margin: 0;
    padding: 0;
    text-align: center;
    color: #000;
}

a{
    color: #fff;
}

.clearfloat { /* this class should be placed on a div or break element and should be the final element before the close of a container that should fully contain a float */
    clear:both;
    height:0;
    font-size: 1px;
    line-height: 0px;
}

#container {
    width: 900px;
    height: auto;
    margin: 0 auto;
    padding:0px;
}

#footer {
    margin: 0; /* zeroing the margins of the first element in the footer will avoid the possibility of margin collapse - a space between divs */
    padding: 10px 0; /* padding on this element will create space, just as the the margin would have, without the margin collapse issue */
    width: 100%;
    height: 200px;
    clear:both;
    background:#333
}

#header {
    background: #DDDDDD;
    width: 100%;
    height:200px;
    margin: 0 auto;
    clear:both;
    padding:0px;
}

#mainContent, #onlyMainContent {
    border-radius: 16px; /* half of button size + padding */
    margin: 20px 320px 0 20px;
    padding-top: 0px;
    padding-right: 20px;
    padding-bottom: 0;
    padding-left: 20px;
    background:#666;
    width:auto;
    float: none;
    text-align: left;
}

#onlyMainContent{
    margin: 20px 20px 0 20px;
}

#navigation {
    width:90%;
    margin:0 auto;
    background:#666;
    padding:0px;
    clear:both;
}

#navigation ul {
    list-style: none;
    list-style-type: none;
}

#navigation li {
    display: inline;
}

#navigation li:before, #navigation li:after{
    content: "|";
}

.panel {
    width: 230px;
    display:block;
    background:#666;
    list-style-image:none;
    list-style-type:none;
    padding:0px;

}

.panelItem {
    list-style-image:none;
    color:#FFF;
    display:block;
    width:230px;
    height:40px;
    margin-left:0px;

}

.panelItemPic {
    width:30px;
    height:30px;
    background-color:#999;
    float:left;
    margin-top:5px;
    margin-right:30px;
    margin-left:10px;
    position: relative;
    top: -4px;
}

#sidebar {
    float: right;
    width: 240px;
    height: auto;
    background: #EBEBEB;
    margin-top:20px;
    margin-bottom:20px;
    padding-top: 0px;
    padding-right: 10px;
    padding-bottom: 0px;
    padding-left: 10px;
    text-align:left;
}

.sidebar_block {
    width:100%;
    margin:0 auto;
    background-color:#666;
    margin-bottom: 10px;
}
